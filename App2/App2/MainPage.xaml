               FontSize="Large" TextColor="White"
               x:Name="MocChwilowa"
               HorizontalTextAlignment="Center"/>
        
        <Label Text="Kadencja:"
               AbsoluteLayout.LayoutBounds="0.5, 0.58, 0.4, 0.1" AbsoluteLayout.LayoutFlags="All"
               FontSize="Large"
               HorizontalTextAlignment="Center"
               TextColor="OrangeRed"/>
        <Label AbsoluteLayout.LayoutBounds="0.5, 0.64, 0.55, 0.1" AbsoluteLayout.LayoutFlags="All"
               FontSize="Large" TextColor="White"
               x:Name="KadencjaSrednia"
               HorizontalTextAlignment="Center"/>
        <Label AbsoluteLayout.LayoutBounds="0.5, 0.7, 0.55, 0.1" AbsoluteLayout.LayoutFlags="All"
               FontSize="Large" TextColor="White"
               x:Name="KadencjaChwilowa"
               HorizontalTextAlignment="Center"/>


        <Button Text="Koniec" Clicked="Koniec_Button"
                AbsoluteLayout.LayoutBounds="0.5, 0.77, 100, 60" AbsoluteLayout.LayoutFlags="PositionProportional"
                FontSize="Medium"/>
    </AbsoluteLayout>

</ContentPage>
